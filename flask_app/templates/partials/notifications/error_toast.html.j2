<div class="toasts-container" class="slide-it">
  <div class="toast fade show mb-3 text-white bg-danger" data-autohide="false" id="toast-1">
    <div class="toast-header">
      <i class="far fa-bell text-muted me-2"></i>
      <strong class="me-auto">Problem!</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body">
      {% if error %}
        {{ error }}
      {% endif %}
      {% if errors and errors is iterable and errors | length %}
        {% for error in errors %}
          {{ error }}
          {{ '<br />' if loop.index > 1 else ''}}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>