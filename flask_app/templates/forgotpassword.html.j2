{% set page = 'forgotpassword' %}
{% from 'macros/email_field.html.j2' import render_email %}
{% set title %}Forgot Password - {{ config.STORE_NAME }}{% endset %}
{% extends "base.html.j2" %}
{% block content %}

{% include 'includes/heading.html.j2' %}

<div id="app" class="app app-full-height app-without-header">
  <div class="login" hx-ext="response-targets">
    <div class="login-content" id="success-target">
      <form
        data-js="forgotpassword-form"
        hx-post="/partials/forgotpassword"
        hx-trigger="submit"
        hx-target="#success-target"
        hx-error-target="#response-card"
        hx-swap="innerHTML transition:true"
      >
        <h1 class="text-center">Forgot Your Password?</h1>
        <p class="text-inverse text-opacity-50 text-center">Enter your e-mail address and we'll send you a link to reset your password.</p>

        <div class="mb-3">
          <label class="form-label" for="email-entry-field">Your E-Mail <span class="text-danger">*</span></label>
          {{ render_email() }}
        </div>
        <div id="response-card" class="slide-it"></div>
        <button
          type="submit"
          class="btn btn-outline-theme btn-lg d-block w-100 fw-500 mb-3 hx-disable"
          id="forgotpassword-submit-button"
        >
          <span class="default-button-text">Submit</span>
          <span id="loading-indicator" class="htmx-indicator">
            Submitting ... <i class="fa fa-spinner fa-spin"></i>
          </span>
        </button>
      </form>
    </div>
  </div>
</div>

{% endblock %}