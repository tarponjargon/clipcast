{
  "manifest_version": 3,
  "name": "ClipCast - Add Content",
  "version": "1.0",
  "description": "Submit the current page URL to ClipCast",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
